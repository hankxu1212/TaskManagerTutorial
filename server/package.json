{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && npx tsc",
    "start": "tsx src/index.ts",
    "dev": "npm run build && concurrently \"npx tsc -w\" \"nodemon --exec ts-node src/index.ts\"",

    "db-seed": "prisma db seed",
    "db-rs": "prisma migrate reset --force",
    "db-gen": "npx prisma generate",
    "db-rs-full": "rm -rf prisma/migrations && prisma migrate reset -f && npx prisma migrate dev --name init && prisma db seed && npx prisma generate",
    "drf": "npm run db-rs-full",
    "db-rs-prod": "npm run db-rs && npx prisma migrate dev --name init && npx prisma generate",
    
    "aws": "tsx scripts/aws-setup.ts",

    "deploy-dev": "pm2 start ecosystem.config.cjs --only crest-dev",
    "deploy-prod": "pm2 start ecosystem.config.cjs --only crest-prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.2.0",
    "@types/pg": "^8.16.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "prisma": "^7.3.0",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.985.0",
    "@aws-sdk/s3-request-presigner": "^3.985.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "body-parser": "^2.2.2",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.18.0"
  },
  "overrides": {
    "gantt-task-react": {
      "react": "$react"
    }
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
